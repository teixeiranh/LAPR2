<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="200.0"
            prefWidth="300.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="app.ui.gui.NurseScene1">
    <center>
        <GridPane BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="btnRecordAdverseReaction" mnemonicParsing="false" onAction="#btnRecordAdverseReaction"
                        text="Record adverse reaction">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Button>
                <!-- TODO: this needs to be updated to correct US GUI-->
                <Button fx:id="btnRecordAdministration" mnemonicParsing="false" onAction="#btnRecordAdministration"
                        text="Record Administration of Vaccine" GridPane.rowIndex="1">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Button>
            </children>
            <columnConstraints>
                <ColumnConstraints halignment="CENTER" hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
        </GridPane>
    </center>
    <bottom>
        <FlowPane alignment="CENTER" hgap="10.0" prefHeight="31.0" prefWidth="320.0" BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="btnCancel" layoutX="10.0" layoutY="10.0" mnemonicParsing="false"
                        onAction="#btnCancelAction" text="Cancel">
                    <font>
                        <Font size="14.0"/>
                    </font>
                </Button>
            </children>
            <opaqueInsets>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </opaqueInsets>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </BorderPane.margin>
        </FlowPane>
    </bottom>
</BorderPane>
